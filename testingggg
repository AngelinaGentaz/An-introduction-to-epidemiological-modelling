import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns 

def SUR(t,beta,gamma,I0):
    out = pd.DataFrame()
    out.loc[0,'sains'],out.loc[0,'infectés'],out.loc[0,'remis']=1-I0,I0,0
    
    for i in range(t):
        sains,infectes,remis = out.loc[i,'sains'],out.loc[i,'infectés'],out.loc[i,'remis']
        
        out.loc[i+1,'sains'] = sains -beta*sains*infectes
        out.loc[i+1,'infectés'] = infectes + beta*sains*infectes-gamma*infectes
        out.loc[i+1,'remis']= remis + gamma*infectes
    return out
